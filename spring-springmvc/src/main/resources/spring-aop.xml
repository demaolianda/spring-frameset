    <aop:config>  
    
    	<!-- Service 缓存通知 -->
        <!--<aop:pointcut id="serviceCachePointcut" expression="@annotation(com.hoomsun.framework.cache.annotation.RemoteCache)" />  -->
        <!--<aop:advisor pointcut-ref="serviceCachePointcut" advice-ref="cacheContextInterceptor" order="3"/>-->
        
        <!-- Service 参数验证切面 -->
        <aop:aspect id="serviceParamCheckAspect" ref="serviceParamCheckAspect" order="1">  
            <aop:pointcut id="serviceParamCheckPointcut" expression="@annotation(com.hoomsun.mobile.annotation.ServiceParamCheck)" />  
            <aop:around pointcut-ref="serviceParamCheckPointcut" method="doCheck"/>  
        </aop:aspect>  
        
        <!-- 接口防刷切面 -->
        <aop:aspect id="antiBrushAspect" ref="antiBrushAspect" order="2">  
            <aop:pointcut id="antiBrushAspectPointcut" expression="@annotation(com.hoomsun.mobile.annotation.AntiBrush)" />  
            <aop:around pointcut-ref="antiBrushAspectPointcut" method="doAround"/>  
        </aop:aspect>  
        
    </aop:config>  
   
   <bean id="serviceParamCheckAspect" class="com.hoomsun.mobile.service.aspect.ServiceParamCheckCacheAspect"/>  
   <bean id="antiBrushAspect" class="com.hoomsun.mobile.service.aspect.AntiBrushAspect" /> 
