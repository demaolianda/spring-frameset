<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="core-dubbo" />

	<!-- 使用zookeeper注册中心暴露发现服务地址 -->
	<dubbo:registry address="zookeeper://zookeeper.hoomxb.com:2181" />

	<!-- 用dubbo协议在20881端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20881" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.hoomsun.service.coupon.CouponServices" ref="couponService" async="false" timeout="10000"/>

	<!-- 和本地bean一样实现服务 -->
	<bean id="couponService" class="com.hoomsun.service.coupon.impl.CouponServicesImpl" />

</beans>